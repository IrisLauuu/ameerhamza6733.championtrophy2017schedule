<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="Feb 09,2017 9:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewData"
            android:layout_margin="16dp"
            android:textSize="18sp" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMatchNo"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Islamabad United"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTeam2"
        android:layout_alignBaseline="@+id/textViewTeam1"
        android:layout_alignBottom="@+id/textViewTeam1"
        android:layout_alignRight="@+id/imageViewTeam2"
        android:layout_alignEnd="@+id/imageViewTeam2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="246dp"
        android:id="@+id/textView6"
        android:textSize="18sp" />

    <TextView
        android:text="Peshwar zalmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textViewTeam1"
        android:textSize="14sp"
        android:layout_below="@+id/textViewData"
        android:layout_alignLeft="@+id/imageViewTeam1"
        android:layout_alignStart="@+id/imageViewTeam1"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

    <ImageView
        android:layout_width="100dp"

        android:id="@+id/imageViewTeam1"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewTeam1"
        android:layout_alignLeft="@+id/textViewData"
        android:layout_alignStart="@+id/textViewData" />

    <ImageView
        android:layout_width="100dp"

        android:id="@+id/imageViewTeam2"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@+id/imageViewTeam1"
        android:layout_alignRight="@+id/textViewMatchNo"
        android:layout_alignEnd="@+id/textViewMatchNo" />

    <TextView
        android:text="Dubai International Cricket Stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:id="@+id/textViewStadum"
        android:textSize="18sp"
        android:lines="1"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>

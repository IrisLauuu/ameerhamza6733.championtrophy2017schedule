<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/item_thumbnail_live"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"


            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_more_vert_black_24dp"

            android:background="@android:color/transparent"
            android:id="@+id/item_more_button_live"

            android:layout_below="@+id/item_thumbnail_live"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/item_title_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="16dp"


            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:layout_below="@+id/item_thumbnail_live"
            android:layout_toStartOf="@+id/item_more_button_live"
            android:text="PSL 2017 Match 2: Quetta Gladiators v Lahore Qalandars - Match Highlights"
            android:layout_toLeftOf="@+id/item_more_button_live" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_more_button_live"


            android:visibility="invisible"

            android:gravity="right"
            android:id="@+id/liveTextView"
            android:text="Live Now"
            android:textSize="12dp"
            android:textColor="#d50000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="8dp" />

        <Button
            android:id="@+id/buttonplayVideoInExoplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/liveTextView"
            android:layout_margin="8dp"
            android:text="Play In Chrome"
            android:visibility="invisible"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


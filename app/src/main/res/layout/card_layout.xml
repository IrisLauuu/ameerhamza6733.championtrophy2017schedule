<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="339dp"

        >

        <ImageView
            android:id="@+id/item_thumbnail_live"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"


            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_more_vert_black_24dp"

            android:background="@android:color/transparent"
            android:id="@+id/item_more_button_live"

            android:layout_below="@+id/item_thumbnail_live"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/item_title_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"


            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:textColor="#222"
            android:textSize="18sp"
            android:paddingEnd="0dp"
            android:layout_below="@+id/item_thumbnail_live"
            android:layout_toStartOf="@+id/item_more_button_live"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/item_more_button_live" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_share_black_24dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:id="@+id/imageButtonShare"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_favorite_border_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/item_title_live"
            android:layout_alignEnd="@+id/item_title_live"
            android:background="@android:color/transparent"
            android:id="@+id/imageButtonFavrate"
            android:layout_margin="16dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

